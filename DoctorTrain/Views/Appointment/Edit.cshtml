@using DoctorTrain.Model.Dto
@model DoctorTrain.Model.Dto.AppointmentDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AppointmentDto</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <select class="form-control" id="DoctorId" name="PatientId" required>
                    <option value="">Select Patient</option>
                    @foreach (var doctor in ViewBag.Patients as List<PatientDto>)
                    {
                        <option value="@doctor.Id">@doctor.FirstName</option>
                    }
                </select>
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorName" class="control-label"></label>
                <select class="form-control" id="DoctorId" name="DoctorId" required>
                    <option value="">Select Doctor</option>
                    @foreach (var doctor in ViewBag.Doctors as List<DoctorDto>)
                    {
                        <option value="@doctor.Id">@doctor.FullName</option>
                    }
                </select>
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HospitalName" class="control-label"></label>
                <select class="form-control" id="HospitalId" name="HospitalId" required>
                    <option value="">Select Hospital</option>
                    @foreach (var hospital in ViewBag.Hospitals as List<HospitalDto>)
                    {
                        <option value="@hospital.Id">@hospital.Name</option>
                    }
                </select>
                <span asp-validation-for="HospitalName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" type="time" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Book Appointment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
