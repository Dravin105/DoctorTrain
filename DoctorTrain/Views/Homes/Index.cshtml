@model IEnumerable<DoctorTrain.Model.Dto.DoctorDto>
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
    }
    .carousel-img {
        height: 600px;
        object-fit: cover;
    }

</style>

<div id="carouselExampleCaptions" class="carousel slide mt-3" data-bs-ride="carousel" data-bs-interval="4000">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Image/Slider1.jpg" class="d-block w-100 carousel-img" alt="Slide 1">
            <div class="carousel-caption d-none d-md-block">
                <h5>Expert Cardiologists</h5>
                <p>World-class treatment with our experienced doctors.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Image/Slider2.jpg" class="d-block w-100 carousel-img" alt="Slide 2">
            <div class="carousel-caption d-none d-md-block">
                <h5>Modern Facilities</h5>
                <p>We offer top-notch medical infrastructure.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Image/Slider3.jpg" class="d-block w-100 carousel-img" alt="Slide 3">
            <div class="carousel-caption d-none d-md-block">
                <h5>24x7 Support</h5>
                <p>We're here for your health anytime, anywhere.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Image/Slider4.jpg" class="d-block w-100 carousel-img" alt="Slide 4">
            <div class="carousel-caption d-none d-md-block">
                <h5>Experienced Specialists</h5>
                <p>Get diagnosed by India’s top doctors.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<h2 class="mb-4 text-primary text-center">Our Doctors</h2>

<div class="d-flex flex-wrap justify-content-center">

    @foreach (var doctor in Model)
    {
        @Html.Partial("_DoctorCard", doctor)
        // Or use: @await Html.PartialAsync("_DoctorCard", doctor)
    }
</div>