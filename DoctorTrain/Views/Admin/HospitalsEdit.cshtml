@model DoctorTrain.Model.Dto.HospitalDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Hospital</h2>

<form asp-action="HospitalsEdit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="District"></label>
        <input asp-for="District" class="form-control" />
        <span asp-validation-for="District" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactLocation"></label>
        <input asp-for="ContactLocation" class="form-control" />
        <span asp-validation-for="ContactLocation" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ManageHospitals" class="btn btn-secondary">Cancel</a>
</form>

<div>
    <a asp-action="ManageHospitals">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
