@model DoctorTrain.Model.Dto.PatientDto

@{
    ViewData["Title"] = "Delete Patient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .container {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        padding: 30px;
        border-radius: 10px;
        color: #fff;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 5px;
        margin-right: 10px;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-link {
        color: #007bff;
        font-weight: bold;
        text-decoration: none;
    }

        .btn-link:hover {
            color: #0056b3;
        }

    .heading {
        font-size: 2rem;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 20px;
    }

    .details-heading {
        font-size: 1.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .patient-info dt {
        font-weight: bold;
        color: #007bff;
    }

    .patient-info dd {
        font-size: 1.1rem;
        color: #fff;
    }

    .form-group {
        margin-top: 20px;
    }
</style>

<div class="container my-5">
    <h1 class="text-center heading">Delete Patient</h1>
    <h3 class="text-center text-danger">Are you sure you want to delete this patient?</h3>
    <hr />

    <div class="patient-info">
        <dl class="row">
            @* <dt class="col-sm-2">Patient ID</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd> *@

            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Gender)</dd>

            <dt class="col-sm-2">Blood Group</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.BloodGruop)</dd>

            <dt class="col-sm-2">Mobile</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Mobile)</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
    </div>

    <div class="form-group text-center">
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="ManagePatients" class="btn-link">Back to List</a>
        </form>
    </div>
</div>