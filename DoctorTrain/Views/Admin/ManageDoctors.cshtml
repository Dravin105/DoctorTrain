@model IEnumerable<DoctorTrain.Model.Dto.DoctorDto>

@{
    ViewData["Title"] = "Doctors List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-4">Doctors List</h2>

<div class="mb-3">
    <a asp-action="DoctorCreate" class="btn btn-primary">+ Add New Doctor</a>
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Photo</th>
            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Specialization)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="Doctor Photo" width="80" height="80" class="rounded-circle border shadow-sm" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a href="@Url.Action("DoctorDetails", "Admin", new { id = item.Id })" class="btn btn-danger">Details</a>
                        <a href="@Url.Action("DoctorEdit", "Admin", new { id = item.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("DoctorDelete", "Admin", new { id = item.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
