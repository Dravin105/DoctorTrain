<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Patient Dashboard</title>
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">DoctorTrain Patient</h4>
        <hr />

       

        <a asp-controller="Patient" asp-action="AppointmentList">AppointmentList</a>
        <a asp-controller="Patient" asp-action="AppointmentCreate">Booking Appointment</a>
        <a asp-controller="Patient" asp-action="PatientProfile">My Profile</a>

        <form asp-action="Logout" asp-controller="Auth" method="post">
            <button type="submit" class="btn btn-light w-100 mt-2">Logout</button>
        </form>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
