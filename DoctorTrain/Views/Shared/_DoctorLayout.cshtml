<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Doctor Dashboard</title>
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">DoctorTrain Doctor</h4>
        <hr />
        <a asp-controller="Doctors" asp-action="PatientsList">PatientsList</a>
        <a asp-controller="Doctors" asp-action="DoctorsList">DoctorsList</a>
        <a asp-controller="Doctors" asp-action="HospitalsList">HospitalsList</a>
        <a asp-controller="Doctors" asp-action="SchedulList">Schedule</a>
        <a asp-controller="Doctors" asp-action="AppointmentList">Appointment</a>

        <form asp-action="Logout" asp-controller="Auth" method="post">
            <button type="submit" class="btn btn-light w-100">Logout</button>
        </form>
    </div>

    <div class="content">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>