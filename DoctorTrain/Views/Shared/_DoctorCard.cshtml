@model DoctorTrain.Model.Dto.DoctorDto

<div class="card mb-3 shadow border-0 p-3 m-2" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start mt-3" style="width: 120px; height: 120px; object-fit: cover;" alt="Doctor">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.FullName</h4>
                <h5 class="card-subtitle mb-2 text-muted">@Model.Specialization</h5>
                <p class="card-text">@Model.AboutDescription</p>
                <p class="card-text"><small class="text-muted">Experience: @Model.ExperienceYears years</small></p>
                <p class="card-text mb-1"><i class="bi bi-envelope-fill"></i> @Model.Email</p>
                <p class="card-text mb-2"><i class="bi bi-phone-fill"></i> @Model.Mobile</p>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">View Details</a>
            </div>
        </div>
    </div>
</div>
