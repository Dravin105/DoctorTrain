<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">DoctorTrain Admin</h4>
        <hr />
        <a asp-controller="Admin" asp-action="ManagePatients">ManagePatients</a>
        <a asp-controller="Admin" asp-action="ManageDoctors">ManageDoctors</a>
        <a asp-controller="Admin" asp-action="ManageHospitals">ManageHospitals</a>
        <a asp-controller="DoctorSchedule" asp-action="Index">Schedule</a>
        <a asp-controller="Appointment" asp-action="Index">Appointment</a>

        <form asp-action="Logout" asp-controller="Auth" method="post">
            <button type="submit" class="btn btn-light w-100">Logout</button>
        </form>
    </div>
    
    <div class="content">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>