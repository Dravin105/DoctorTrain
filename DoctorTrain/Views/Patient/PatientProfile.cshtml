@model IEnumerable<DoctorTrain.Model.Dto.PatientDto>

@{
    ViewData["Title"] = "Patient List";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
}

<style>
    .container {
        background: linear-gradient(to right, #134e5e, #71b280);
        padding: 30px;
        border-radius: 10px;
        color: #fff;
    }

    .table {
        background-color: #fff;
        border-radius: 8px;
        margin-top: 20px;
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #fdbb28;
            color: #000;
            font-weight: bold;
        }

        .table td {
            color: #333;
        }

    .btn-create {
        background-color: #fdbb28;
        color: #000;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-create:hover {
            background-color: #f5a623;
            color: #fff;
        }

    .btn-link {
        color: #134e5e;
    }

        .btn-link:hover {
            color: #fdbb28;
        }

    .action-links {
        display: flex;
        justify-content: center;
        gap: 10px;
    }
</style>

<div class="container my-5">
    <h1 class="text-center mb-4">Patient List</h1>

    <div class="text-end mb-3">
        <a class="btn-create" asp-action="PatientCreate">Create New Patient</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                <th>@Html.DisplayNameFor(model => model.DOB)</th>
                <th>@Html.DisplayNameFor(model => model.BloodGruop)</th>
                <th>@Html.DisplayNameFor(model => model.Mobile)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                    <td>@Html.DisplayFor(modelItem => item.BloodGruop)</td>
                    <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <div class="action-links">
                            @Html.ActionLink("PatientEdit", "PatientEdit", new { id = item.Id }, new { @class = "btn-link" }) |
                            @Html.ActionLink("PatientDetails", "PatientDetails", new { id = item.Id }, new { @class = "btn-link" }) |
                            @Html.ActionLink("PatientDelete", "PatientDelete", new { id = item.Id }, new { @class = "btn-link" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}